{
  "name": "server",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "compile": "./node_modules/typescript/bin/tsc",
    "start-dev": "nodemon",
    "start-prod": "./node_modules/typescript/bin/tsc && node ./build/server.js",
    "unit-test": "npm run compile && mocha --opts ./build/test/unit/config/mocha.opts ./build/test/unit/unit.test.js",
    "integration-test": "npm run compile && mocha --opts ./build/test/integration/config/mocha.opts ./build/test/integration/integration.test.js",
    "integration-coverage": "nyc --reporter=html npm run integration-test",
    "unit-coverage": "nyc --reporter=html npm run compile && npm run unit-test",
    "test": "npm run compile && npm run integration-test"
  },
  "dependencies": {
    "@types/bluebird": "^3.5.5",
    "@types/body-parser": "^1.16.3",
    "@types/chai": "^4.0.0",
    "@types/express": "^4.0.35",
    "@types/http-status": "^0.2.29",
    "@types/lodash": "^4.14.65",
    "@types/mocha": "^2.2.41",
    "@types/morgan": "^1.7.32",
    "@types/node": "^9.6.7",
    "@types/pg": "^6.1.40",
    "@types/sequelize": "^4.0.55",
    "@types/supertest": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "http": "0.0.0",
    "http-status": "^1.0.1",
    "jwt-simple": "^0.5.1",
    "lodash": "^4.17.4",
    "morgan": "^1.8.2",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "pg": "^6.2.3",
    "sequelize": "^3.30.4",
    "sequelize-cli": "^2.7.0",
    "typescript": "^2.8.3",
    "testdouble": "^2.1.2"
  },
  "devDependencies": {
    "chai": "^4.0.1",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "nyc": "^11.0.2",
    "supertest": "^3.0.0",
    "ts-node": "^3.0.4"
  }
}
