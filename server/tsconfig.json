{
    "include": [
        "*.ts",
        "api/**/*.ts",
        "config/**/*.ts",
        "models/**/*.ts",
        "test/**/*.ts",
        "test/*.ts"
    ],
    "exclude": ["node_modules", ".npm"],
    "buildOnSave": true,
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "./build",
        "watch": false,
        "types": ["node"]
    }
}